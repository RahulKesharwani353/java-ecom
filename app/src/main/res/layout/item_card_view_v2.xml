<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="150dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/itemCardView2.0"
    android:padding="50dp"
    app:cardBackgroundColor="#FFFFFF"
    android:elevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/itemViewImage2.0"
            android:layout_width="131dp"
            android:layout_height="124dp"
            android:background="@drawable/insert_photo_24"
            android:padding="10dp"

            android:scaleType="centerCrop">

        </ImageView>

        <TextView
            android:id="@+id/itemViewName2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itemViewImage2.0"
            android:layout_marginTop="15dp"
            android:text="ProductName"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /- R.s"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/itemViewName2.0"
            android:layout_toEndOf="@+id/itemViewPrice2.0"
            android:layout_marginEnd="5dp"

            />

        <TextView
            android:id="@+id/itemViewPrice2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/itemViewName2.0"
           android:layout_toEndOf="@+id/itemViewImage2.0"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/plus_btn"
            android:layout_width="35sp"
            android:layout_height="30dp"
            android:elevation="5dp"
            android:background="@color/colorPrimaryDark"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/count_view"
            android:layout_width="35sp"
            android:layout_height="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/plus_btn"
           android:layout_alignParentBottom="true"
            />

        <Button
            android:elevation="5dp"
            android:id="@+id/minus_btn"
            android:layout_width="35sp"
            android:layout_height="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/count_view"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>